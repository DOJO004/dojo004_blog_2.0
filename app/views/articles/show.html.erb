<div class="w-full" data-controller="google-prettify">
  <div class="flex justify-between">
    <%= link_to articles_path do%>
      <%= image_tag "icons/back.svg"%>
    <% end %>
    <% if  current_user && current_user.role === "admin" %>
      <%= link_to edit_article_path(id: params[:id]) do%>
        <%= image_tag "icons/edit.svg"%>
      <% end %>
    <% end %>
  </div>
  <div>
    <h1 class="text-3xl font-bold md:text-4xl lg:text-5xl">
      <%= @article.title%>
    </h1>
    <div class="flex items-center gap-2 mt-2">
      <% @article.categories.each do |category|%>
        <p class="p-1 text-white bg-blue-500 rounded-md"><%= category.name%></p>
      <% end %>
    </div>
    <div class="relative mt-8">
      <%= @article.content%>
    </div>
  </div>
</div>