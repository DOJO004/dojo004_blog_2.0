<div class="w-full">
  <div>
    <% @articles.each do |article|%>
      <div class="relative">
        <%= link_to article, class:"block w-full my-4 p-4 border rounded-md" do%>
          <%= article.title%>
          <span class="text-sm text-gray-300">
            <%= article.created_at.in_time_zone("Asia/Taipei").strftime("%Y-%m-%d")%>
          </span>
          <div class="flex gap-2 mt-2">
            <% article.categories.each do |category|%>
              <p class="p-1 text-white bg-blue-500 rounded-md"><%= category.name%></p>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>