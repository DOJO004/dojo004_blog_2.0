<div data-controller="slim-select">
  <%= form_with(model:@article, data: {turbo: false, controller: "google-prettify"}) do |f|%>
    <div class="my-4">
      <%= f.label :cover_photo%>
      <%= f.file_field :cover_photo, class:"w-full rounded-md p-2"%>
    </div>
    <div class="my-4">
      <%= f.label :title%>
      <%= f.text_field :title, class:"w-full rounded-md p-2"%>
    </div>
    <div class="my-4">
      <%= f.label :category%>
      <%= f.select :category, Category.all.pluck(:name, :id), {}, { multiple: true, data: { slim_select_target: "field"}, class:"w-full rounded-md p-2"}%>
    </div>
    <div class="my-4">
      <%f.label :content%>
      <%= f.rich_text_area :content%>
    </div>
    <%= f.submit %>
  <% end %>
</div>
<script src="https://unpkg.com/slim-select@latest/dist/slimselect.min.js"></script>