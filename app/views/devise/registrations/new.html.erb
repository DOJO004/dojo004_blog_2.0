<div class="w-full ">
<h2 class="my-4 ">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="my-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full rounded-md p-2"%>
  </div>

  <div class="my-4">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"w-full rounded-md p-2"%>
  </div>

  <div class="my-4">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full rounded-md p-2"%>
  </div>

  <div class="w-full p-2 my-4 border rounded-md">
    <%= f.submit "Sign up", class:"w-full "%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>