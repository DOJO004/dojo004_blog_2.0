<div class="w-full ">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="my-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"border w-full rounded-md p-2" %>
  </div>

  <div class="my-4">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"border w-full rounded-md p-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="my-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="w-full p-2 my-4 border rounded-md">
    <%= f.submit "Log in", class:"w-full" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>